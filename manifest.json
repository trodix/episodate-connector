{
    "name": "Episodate serienstream connector",
    "description": "A connector to watch series on some websites from episodate.com watchlist",
    "version": "1.1.1",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://www.episodate.com/watchlist*"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ],
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "images/tv-retro.svg",
                "main.css"
            ]
        }
    ]
}
